{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": ["ES2018", "DOM"],  /* Add this line to support AsyncIterableIterator */
    "target": "es2018",        /* Update target to ES2018 */
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
